[user]
	name = MarcosEllys
	email = marcos.ellys@gmail.com
[push]
	default = simple
[credential]
       helper = cache --timeout=10800
[core]
	editor = vim
	precomposeunicode = true
[color]
	ui = true
[alias]
	# Show all aliases available
	aliases = "!git config --get-regexp '^alias\\.' | cut -c 7- | sed 's/ / = /'"

	# Show who contributed with summarized changes
	contributors = shortlog -sne --no-merges

	# Show latest contribuitions
	history = log -10 --format=format:'%Cgreen%h %Creset• %s %Cred(%cN, %ar)%Creset' --no-merges

	# Show all commits today
	today = log --format=format:'%Cgreen%h %Creset• %s %Cred(%cN, %ar)%Creset' --no-merges --since=midnight

	# log with a text-based graphical representation of the commit history.
	graph = log --graph -10 --branches --remotes --tags  --format=format:'%Cgreen%h %Creset• %<(75,trunc)%s (%cN, %ar) %Cred%d' --date-order

	# Show changes in files in summarized form
	st = status -su

	# Show my latest contributions
	log-me = !git log -10 --author $(git config user.email) --format=format:'%Cgreen%h %Creset• %<(75,trunc)%s (%cN, %ar) %Cred%d' --date-order --no-merges

	# Show files changed in last commit
	last = log -1 --format=format:'%Cgreen%h %Creset• %s %Cred(%cN, %ar)%Creset' --stat

	# Show all tags
	stags = log --no-walk --tags --format=format:'%Cgreen%h %Creset• %Cblue%d %Creset • %s %Cred(%cN, %ar)%Creset'

	# diff improved
	df    = diff --color --ignore-space-at-eol --ignore-blank-lines
[diff]
	  compactionHeuristic = true
	  indentHeuristic = true
	  algorithm = patience
[interactive]
	  diffFilter = diff-highlight
[blame]
	  date = relative
